
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thay đổi mật khẩu</title>
    <link rel="stylesheet" href="~/Content/css/reset.css">
    <link rel="stylesheet" href="~/Content/font/stylesheet.css">
    <link href="~/Content/css/changepassword.css" rel="stylesheet" />
    <style type="text/css">
        .form__changepassword {
            -webkit-box-shadow: 11px 11px 17px 2px rgba(0,0,0,0.75);
            -moz-box-shadow: 11px 11px 17px 2px rgba(0,0,0,0.75);
            box-shadow: 11px 11px 17px 2px rgba(0,0,0,0.75);
        }
    </style>
</head>
<body>
    <div class="wrapper-changepassword">
        <div class="changepassword">
            <div class="form__changepassword">
                <div class="left">
                    <a href="@Url.Action("Index","Home")" class="img">
                        <img src="~/Content/img/logo.png" alt="">
                    </a>
                </div>
                <div class="right">
                    <div class="title">
                        <h2>THAY ĐỔI MẬT KHẨU</h2>
                    </div>
                    <div class="form__wrapper">
                        @using (Html.BeginForm("ChangePassword", "Login", FormMethod.Post))
                        {
                        <div class="form">
                            <div class="row">
                                <label for="password">Mật khẩu cũ: </label>
                                <input type="password" name="passwordold" id="passwordold" class="input__row">
                            </div>
                            <div class="row">
                                <label for="password">Mật khẩu mới: </label>
                                <input type="password" name="password" id="password" class="input__row">
                            </div>
                            <div class="row">
                                <label for="repassword">Nhập lại mật khẩu mới: </label>
                                <input type="password" name="repassword" id="repassword" class="input__row">
                            </div>
                            <div class="row submit">
                                <button type="submit" style="outline:none;" onclick="checkValue(event)" id="submitBtn" class="submitButton">Thay đổi mật khẩu</button>
                            </div>
                            <div class="row msg">
                                @{
                                    if (ViewData["Msg"] != null)
                                    {
                                        <p>
                                            @ViewData["Msg"].ToString()
                                        </p>
                                    }
                                }

                            </div>
                        </div>
                        }
                        </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        function checkValue(event) {
            var passwordold = document.getElementById('passwordold');
            var password = document.getElementById('password');
            var repassword = document.getElementById('repassword');
            if (password.value == "" || repassword.value == "" || passwordold.value == "") {
                alert('Vui lòng nhập đầy đủ thông tin.');
                event.preventDefault();
                return false;
            }
            else {
                if (password.value != repassword.value) {
                    alert('Mật khẩu không trùng khớp');
                    event.preventDefault();
                    return false;
                }
            }
        }
    </script>


</body>
</html>
