                            <ul>
                                <li><a href="#">Thể loại tin tức</a></li>
                                <li><a href="#">Tin tức</a></li>
                            </ul>
                        </div>
                    </div>*@
            </div>
        </div>
        <div class="right">
            <div class="header__wrapper">
                <div class="header">
                    <div class="account">
                        <div class="username">
                            <p>Nguyễn Trần Nhật Minh Bá</p>
                            <div class="img">
                                <img src="~/Content/img/profile.svg" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="main__wrapper">
                @RenderBody()
            </div>
        </div>
    </div>

    
</body>
</html>
